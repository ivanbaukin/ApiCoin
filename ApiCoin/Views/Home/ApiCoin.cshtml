@{
    ViewBag.Title = "ApiCoin";
}
    <style>
        td {
            padding-top: 2.5px;
        }
    </style>
<h2>ApiCoin</h2>
<hr />
<table width="100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Symbol</th>
            <th>Market Cap</th>
            <th>Price</th>
            <th>% 1h</th>
            <th>% 24h</th>
            <th>Update Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Api.data)
        {
            <tr>
                <td><img width="20" height="20" src="@item.logo" alt="@item.slug" title="@item.slug"/> @item.name</td>
                <td>@item.symbol</td>
                <td>$@String.Format("{0:0,0}", item.quote.USD.market_cap)</td>
                <td>$@String.Format("{0:#,0.00}", item.quote.USD.price)</td>
                <td>@String.Format("{0:,0.##}", item.quote.USD.percent_change_1h)%</td>
                <td>@String.Format("{0:,0.##}", item.quote.USD.percent_change_24h)%</td>
                <td>@item.quote.USD.last_updated</td>
            </tr>
        }
    </tbody>
</table>